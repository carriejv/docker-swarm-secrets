{
	"name": "container-secrets",
	"version": "1.0.0",
	"description": "A robust, async, caching, Typescript-friendly reader for Docker and Kubernetes secrets. Formerly docker-swarm-secrets.",
	"keywords": [
		"docker",
		"kubernetes",
		"k8s",
		"swarm",
		"secret",
		"secrets",
		"container",
		"parser",
		"reader",
		"typescript",
		"types",
		"docker-swarm-secrets"
	],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"directories": {
		"test": "test"
	},
	"scripts": {
		"start": "node index.js",
		"test": "npm run lint && npm run testOnly",
		"testOnly": "nyc mocha -r ts-node/register ./test/**/*.spec.ts",
		"lint": "eslint . --ext .ts",
		"build": "tsc --project ./tsconfig.json",
		"prepublishOnly": "npm run build"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/carriejv/container-secrets.git"
	},
	"bugs": {
		"url": "https://github.com/carriejv/container-secrets/issues"
	},
	"homepage": "https://github.com/carriejv/container-secrets",
	"author": "Carrie Vrtis <carrie@carriejv.com> (https://www.carriejv.com)",
	"contributors": [
		"Carrie Vrtis <carrie@carriejv.com> (https://www.carriejv.com)"
	],
	"license": "MIT",
	"private": false,
	"devDependencies": {
		"@types/chai": "^4.2.14",
		"@types/mocha": "^8.0.3",
		"@types/node": "^14.14.7",
		"@types/sinon": "^9.0.8",
		"@typescript-eslint/eslint-plugin": "^4.7.0",
		"@typescript-eslint/parser": "^4.7.0",
		"chai": "^4.2.0",
		"eslint": "^7.13.0",
		"mocha": "^8.2.1",
		"nyc": "^15.1.0",
		"rewiremock": "^3.14.3",
		"ts-node": "^9.0.0",
		"typescript": "^4.0.5"
	}
}
